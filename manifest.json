{
  "version": "1.0",
  "name": "Yerba matcher",
  "description": "Compare yerba mate prices",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Yerba matcher"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "manifest_version": 3
}
