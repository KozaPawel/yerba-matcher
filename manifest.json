{
  "version": "1.0",
  "name": "Yerba matcher",
  "description": "Compare yerba mate prices",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Yerba matcher"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.poyerbani.pl/*",
        "https://www.matemundo.pl/*",
        "https://dobreziele.pl/*"
      ],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "manifest_version": 3
}
